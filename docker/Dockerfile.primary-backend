FROM node:20-alpine
RUN npm install -g pnpm

WORKDIR /app

COPY ./apps/backend/ ./apps/primary-backend
COPY ./packages/ ./packages
COPY package.json .
COPY turbo.json .
COPY pnpm-lock.yaml .
COPY pnpm-workspace.yaml .

RUN pnpm install
RUN pnpm run db:generate

EXPOSE 3000

CMD ["pnpm", "run", "primary-backend"]
